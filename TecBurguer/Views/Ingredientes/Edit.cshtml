@model TecBurguer.Models.Ingrediente

@{
    ViewData["Title"] = "Editar Ingrediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary: #FF2E00; /* Laranja Neon */
        --primary-glow: rgba(255, 46, 0, 0.5);
        --accent: #FFC107; /* Amarelo */
        --dark-bg: #121212;
        --card-bg: rgba(30, 30, 30, 0.7);
        --border-glass: rgba(255, 255, 255, 0.1);
        --text-main: #f5f5f5;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-main);
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    /* Container Central */
    .create-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    /* Background FX */
    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        z-index: 0;
        opacity: 0.2;
    }

    .orb-1 {
        width: 350px;
        height: 350px;
        background: var(--primary);
        top: -50px;
        left: -50px;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: var(--accent);
        bottom: -50px;
        right: -50px;
    }

    /* Painel de Vidro */
    .glass-panel {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-top: 1px solid rgba(255, 46, 0, 0.3);
        border-radius: 30px;
        padding: 50px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        z-index: 1;
        animation: fadeInUp 0.6s ease-out;
        position: relative;
    }

    .form-title {
        font-family: 'Ranchers', cursive;
        color: var(--primary);
        font-size: 2.5rem;
        text-align: center;
        text-shadow: 2px 2px 0 #000;
        margin: 0;
        letter-spacing: 1px;
    }

    .form-subtitle {
        text-align: center;
        color: #aaa;
        font-size: 0.9rem;
        margin-bottom: 30px;
    }

    /* Inputs */
    .form-group {
        margin-bottom: 20px;
    }

    .form-floating > .form-control {
        background-color: rgba(0, 0, 0, 0.4);
        border: 1px solid #444;
        color: white;
        border-radius: 12px;
        height: 60px;
        padding-left: 20px;
    }

        .form-floating > .form-control:focus {
            background-color: rgba(0, 0, 0, 0.6);
            border-color: var(--primary);
            box-shadow: 0 0 15px var(--primary-glow);
            color: white;
        }

    .form-floating label {
        color: #888;
        padding-left: 20px;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: var(--primary);
        font-weight: bold;
    }

    /* Ícones dentro dos inputs */
    .input-icon-wrap {
        position: relative;
    }

    .input-icon {
        position: absolute;
        right: 20px;
        top: 20px;
        color: var(--primary);
        opacity: 0.5;
        pointer-events: none;
        z-index: 2;
        font-size: 1.2rem;
    }

    /* Botões de Controle de Quantidade */
    .spinner-controls {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 2px;
        z-index: 5;
    }

    .spinner-btn {
        color: #666;
        cursor: pointer;
        transition: all 0.2s;
        padding: 0 5px;
        line-height: 10px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .spinner-btn:hover {
            color: var(--primary);
            text-shadow: 0 0 8px var(--primary);
            transform: scale(1.2);
        }

    /* Remover setas padrão do navegador */
    input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    /* Botões de Ação */
    .btn-submit {
        width: 100%;
        padding: 15px;
        background: linear-gradient(45deg, var(--primary), #d62500);
        border: none;
        border-radius: 50px;
        color: white;
        font-weight: bold;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(255, 46, 0, 0.3);
        margin-top: 20px;
        cursor: pointer;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 46, 0, 0.6);
            color: white;
        }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 25px;
        color: #aaa;
        text-decoration: none;
        transition: 0.3s;
        font-size: 0.9rem;
    }

        .btn-back:hover {
            color: white;
        }

    @@keyframes fadeInUp {
        from
        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

    }
</style>

<div class="create-container">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-panel">
        <h1 class="form-title">EDITAR INGREDIENTE</h1>
        <p class="form-subtitle">Atualize os dados do estoque</p>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <input type="hidden" asp-for="IdIngrediente" />

            <div class="input-icon-wrap">
                <i class="fas fa-carrot input-icon"></i>
                <div class="form-floating mb-3">
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Bacon Fatiado" />
                    <label asp-for="Nome">Nome do Ingrediente</label>
                    <span asp-validation-for="Nome" class="text-danger small mt-1 d-block"></span>
                </div>
            </div>

            <div class="input-icon-wrap">
                <i class="fas fa-cubes input-icon" style="right: 40px;"></i>
                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Quantidade" id="qtyInput" class="form-control" placeholder="0" type="number" />
                    <label asp-for="Quantidade">Quantidade Atual</label>
                    <span asp-validation-for="Quantidade" class="text-danger small mt-1 d-block"></span>

                    <div class="spinner-controls">
                        <div class="spinner-btn up" onclick="adjustQty(1)"><i class="fas fa-caret-up"></i></div>
                        <div class="spinner-btn down" onclick="adjustQty(-1)"><i class="fas fa-caret-down"></i></div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-save me-2"></i> SALVAR ALTERAÇÕES
            </button>
        </form>

        <a asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left me-1"></i> Voltar para o Estoque
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function adjustQty(amount) {
            var input = document.getElementById('qtyInput');
            var currentVal = parseInt(input.value);

            if (isNaN(currentVal)) currentVal = 0;

            var newVal = currentVal + amount;

            if (newVal < 0) newVal = 0;

            input.value = newVal;
        }
    </script>
}