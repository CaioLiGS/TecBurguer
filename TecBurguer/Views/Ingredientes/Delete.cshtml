@model TecBurguer.Models.Ingrediente

@{
    ViewData["Title"] = "Excluir Ingrediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --danger: #FF003C; /* Vermelho Neon */
        --danger-dark: #8B0000;
        --text-main: #f5f5f5;
        --dark-bg: #121212;
        --card-bg: rgba(30, 30, 30, 0.7);
        --border-glass: rgba(255, 0, 60, 0.3);
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-main);
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    /* Container Central */
    .delete-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    /* Orbs de Fundo (Vermelhos) */
    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        z-index: 0;
        opacity: 0.2;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: var(--danger);
        top: -100px;
        left: -100px;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: var(--danger-dark);
        bottom: -100px;
        right: -100px;
    }

    /* Painel de Vidro */
    .glass-panel {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 2px solid var(--border-glass);
        border-radius: 30px;
        box-shadow: 0 0 50px rgba(255, 0, 60, 0.2);
        padding: 50px;
        max-width: 600px;
        width: 100%;
        text-align: center;
        z-index: 1;
        animation: shakeIn 0.5s ease-out;
        position: relative;
    }

    /* Ícone de Aviso */
    .warning-icon {
        font-size: 5rem;
        color: var(--danger);
        margin-bottom: 20px;
        filter: drop-shadow(0 0 20px var(--danger));
        animation: pulse 1.5s infinite;
    }

    .warning-title {
        font-family: 'Ranchers', cursive;
        color: var(--danger);
        font-size: 2.5rem;
        margin-bottom: 10px;
        text-shadow: 2px 2px 0 #000;
        letter-spacing: 2px;
    }

    .warning-text {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 30px;
    }

    /* Caixa de Detalhes */
    .details-box {
        background: rgba(0,0,0,0.4);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        border-left: 5px solid var(--danger);
        text-align: left;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding: 12px 0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-size: 0.9rem;
        color: #aaa;
        text-transform: uppercase;
        font-weight: bold;
    }

    .detail-value {
        font-size: 1.2rem;
        color: white;
        font-weight: bold;
    }

    /* Botões */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-delete {
        flex: 2;
        background: linear-gradient(45deg, var(--danger), #ff4d4d);
        color: white;
        border: none;
        padding: 15px;
        border-radius: 50px;
        font-weight: bold;
        font-size: 1.2rem;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 5px 20px rgba(255, 0, 60, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-delete:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 40px rgba(255, 0, 60, 0.7);
        }

    .btn-cancel {
        flex: 1;
        background: transparent;
        border: 2px solid #555;
        color: #aaa;
        border-radius: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            border-color: white;
            color: white;
            background: rgba(255,255,255,0.05);
        }

    /* Animações */
    @@keyframes shakeIn {
        0%
        {
            opacity: 0;
            transform: scale(0.8);
        }

        70% {
            transform: scale(1.05);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }

    }

    @@keyframes pulse {
        0%
        {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.7;
            transform: scale(1.1);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }

    }
</style>

<div class="delete-container">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-panel">
        <i class="fas fa-exclamation-triangle warning-icon"></i>

        <h1 class="warning-title">EXCLUIR ITEM?</h1>
        <p class="warning-text">
            Você está prestes a remover um ingrediente do estoque.<br>
            <strong>Isso pode afetar as receitas dos lanches vinculados.</strong>
        </p>

        <div class="details-box">
            <div class="detail-row">
                <span class="detail-label"><i class="fas fa-carrot me-2"></i> Ingrediente</span>
                <span class="detail-value">@Html.DisplayFor(model => model.Nome)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label"><i class="fas fa-cubes me-2"></i> Estoque Atual</span>
                <span class="detail-value">@Html.DisplayFor(model => model.Quantidade)</span>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdIngrediente" />

            <div class="action-buttons">
                <a asp-action="Index" class="btn-cancel">CANCELAR</a>
                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash-alt"></i> CONFIRMAR
                </button>
            </div>
        </form>
    </div>
</div>