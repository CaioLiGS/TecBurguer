@model TecBurguer.Models.Ofertas

@{
    ViewData["Title"] = "Nova Oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<link href="~/css/Ofertas.css" rel="stylesheet" />
<div class="create-container">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-panel">
        <h1 class="form-title">CRIAR OFERTA <i class="fas fa-fire"></i></h1>
        <p class="form-subtitle">Defina preços especiais para seus produtos</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="input-group-modern">
                <label asp-for="idHamburguer" class="form-label">SELECIONE O HAMBÚRGUER</label>
                <div class="input-wrapper">
                    <select asp-for="idHamburguer" class="form-control styled-select" asp-items="ViewBag.idHamburguer">
                        <option value="" disabled selected>-- Escolha o item --</option>
                    </select>
                    <i class="fas fa-hamburger input-icon"></i>
                    <i class="fas fa-chevron-down select-arrow"></i>
                </div>
            </div>

            <div class="input-group-modern">
                <label asp-for="dataTermino" class="form-label">DATA DE TÉRMINO</label>
                <div class="input-wrapper">
                    <input asp-for="dataTermino" class="form-control" type="datetime-local" />
                    <i class="fas fa-calendar-alt input-icon"></i>
                </div>
                <span asp-validation-for="dataTermino" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="input-group-modern">
                        <label asp-for="precoFinal" class="form-label">PREÇO FINAL (R$)</label>
                        <div class="input-wrapper">
                            <input id="PrecoFinal" asp-for="precoFinal" class="form-control" placeholder="0,00" />
                            <i class="fas fa-tag input-icon"></i>
                        </div>
                        <span asp-validation-for="precoFinal" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="input-group-modern">
                        <label asp-for="porcentagem" class="form-label">DESCONTO (%)</label>
                        <div class="input-wrapper">
                            <input id="PorcentagemOferta" asp-for="porcentagem" class="form-control" placeholder="0%" />
                            <i class="fas fa-percent input-icon"></i>
                        </div>
                        <span asp-validation-for="porcentagem" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-bolt"></i> LANÇAR OFERTA
            </button>
        </form>

        <a asp-controller="Hamburgueres" asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left"></i> Voltar para lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var precoOriginal = 0;

        $(document).ready(function() {
            var precos = @Html.Raw(ViewData["PrecosHamburgueres"]);

            var $dropdown = $('#idHamburguer');
            var $inputPreco = $('#PrecoFinal');
            var $inputPorc = $('#PorcentagemOferta');

            function atualizarDadosProduto() {
                var idSelecionado = $dropdown.val();

                if (idSelecionado && precos[idSelecionado]) {
                    precoOriginal = parseFloat(precos[idSelecionado]);
                    $inputPreco.attr('placeholder', 'Atual: R$ ' + precoOriginal.toFixed(2));
                } else {
                    $inputPreco.attr('placeholder', 'R$ --.--');
                    precoOriginal = 0;
                }
            }

            $dropdown.on('change', function() {
                atualizarDadosProduto();
                $inputPreco.val('').prop('readonly', false);
                $inputPorc.val('').prop('readonly', false);
            });

            atualizarDadosProduto();
        });

        $('#PrecoFinal').blur(function(){
            var valorDigitado = $(this).val().replace(',', '.');
            var $inputPorc = $('#PorcentagemOferta');

            if(valorDigitado == "" || valorDigitado == 0 || precoOriginal == 0){
                $inputPorc.val('').prop('readonly', false);
            }
            else {
                var desconto = (100 - (valorDigitado / precoOriginal * 100));
                $inputPorc.val(desconto.toFixed(2))//.prop('readonly', true);
            }
        });

        $('#PorcentagemOferta').blur(function(){
            var valorDigitado = $(this).val().replace('%', '').replace(',', '.');
            var $inputPreco = $('#PrecoFinal');

            if(valorDigitado == "" || valorDigitado == 0 || precoOriginal == 0){
                $inputPreco.val('').prop('readonly', false);
            }
            else {

                var novoPreco = (precoOriginal - (precoOriginal * valorDigitado / 100));
                $inputPreco.val(novoPreco.toFixed(2))//.prop('readonly', true);
            }
        });
    </script>
}