@model TecBurguer.Models.Hamburguer

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="~/css/Hamburgueres.css" rel="stylesheet" />

<h1 class="TituloCentral">Criar novo hamburguer</h1>


<div class="row">
    <div class="col-md-4">
        <form class="form" asp-action="Create">  

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="PreencherImagem">
                <img src="~/css/Imagens/BurguerLogo.png" id="ImagemDoLink"
                     onerror="this.src='/css/Imagens/BurguerLogo.png'">

                <div class="LinkEArquivo">
                    <input asp-for="Imagem" class="form-control" placeholder="Link da imagem" id="LinkDaImagem" />
                    <label for="fileInput" class="UploadLabel" title="Selecionar imagem do computador">
                        <i class="fa-solid fa-folder-open"></i>
                    </label>
                    <input type="file" id="fileInput" accept="image/*" style="display:none;">
                </div>
            </div>


            <div class="Inputs">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" style="word-wrap: break-word;
    overflow-wrap: break-word;" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" id="BotaoSubmit" />
                    <a asp-action="Index">Voltar à lista</a>
                </div>
            </div>
            
            
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://unpkg.com/@@supabase/supabase-js@2"></script>
}
