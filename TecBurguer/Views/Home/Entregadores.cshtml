@model IEnumerable<TecBurguer.Models.Pedido>

@{
    ViewData["Title"] = "Painel de Entregas";
}

<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Entregadores.css">

<div class="container mt-5">

    <div class="header-container">
        <h1 class="modern-title">
            Painel de Entregas
        </h1>
        <p class="subtitle">Selecione um pedido disponível para realizar a entrega</p>
    </div>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Ops!</strong> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="empty-state-wrapper">
            <div class="radar-spinner">
                <div class="radar-wave"></div>
                <div class="radar-wave delay-1"></div>
                <i class="fas fa-check-circle"></i>
            </div>

            <div class="empty-content">
                <h3>Tudo tranquilo por aqui!</h3>
                <p>Não há pedidos aguardando entrega no momento.</p>

                <button onclick="window.location.reload();" class="btn-refresh">
                    <i class="fas fa-sync-alt"></i> Atualizar
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th scope="col"># ID</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Endereço / Bairro</th>
                        <th scope="col">Total</th>
                        <th scope="col" class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pedido in Model)
                    {
                        <tr>
                            <td><strong>#@pedido.IdPedido</strong></td>
                            <td>
                                @if (pedido.IdUsuarioNavigation != null)
                                {
                                    @pedido.IdUsuarioNavigation.Nome
                                }
                                else
                                {
                                    <span class="text-muted">Cliente não ident.</span>
                                }
                            </td>
                            <td>
                                @if (pedido.IdUsuarioNavigation != null)
                                {
                                    <i class="fas fa-map-marker-alt text-danger"></i> 
                                    @pedido.IdUsuarioNavigation.Bairro
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="fw-bold text-success">
                                R$ @(pedido.PrecoTotal?.ToString("F2") ?? "0.00")
                            </td>
                            <td class="text-center">
                                <form asp-action="AceitarEntrega" method="post">
                                    <input type="hidden" name="idPedido" value="@pedido.IdPedido" />
                                    <button type="submit" class="btn btn-primary btn-sm px-4">
                                        Aceitar Entrega
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>