@using Microsoft.AspNetCore.Identity
@using TecBurguer.Areas.Identity.Data

@model IEnumerable<TecBurguer.Models.Usuario>

@inject UserManager<LoginCliente> UserManager
@inject SignInManager<LoginCliente> SignInManager

@{
    ViewData["Title"] = "Gestão de Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background-color: var(--dark-bg);
        color: white;
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    .container-users {
        padding: 40px 5%;
        background-color: #1a1a1a;
        min-height: 80vh;
    }

    .page-title {
        font-family: 'Ranchers', cursive;
        color: var(--primary);
        font-size: 3rem;
        text-align: center;
        margin-bottom: 40px;
        text-shadow: 2px 2px 0px #000;
        text-transform: uppercase;
    }

    /* Estilização da Tabela */
    .table-responsive {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        border: 1px solid rgba(255, 46, 0, 0.2);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #e0e0e0;
    }

        .custom-table th {
            text-align: left;
            padding: 15px;
            color: var(--primary);
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 2px solid rgba(255, 46, 0, 0.3);
        }

        .custom-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            vertical-align: middle;
        }

        .custom-table tr:hover {
            background-color: rgba(255, 255, 255, 0.03);
        }

    /* Form Elements */
    .role-select {
        background-color: #2a2a2a;
        color: white;
        border: 1px solid #444;
        padding: 8px 12px;
        border-radius: 5px;
        outline: none;
        cursor: pointer;
        font-family: 'Poppins', sans-serif;
    }

        .role-select:focus {
            border-color: var(--primary);
        }

    .btn-update {
        background-color: transparent;
        border: 1px solid var(--primary);
        color: var(--primary);
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.8rem;
    }

        .btn-update:hover {
            background-color: var(--primary);
            color: white;
            box-shadow: 0 0 10px rgba(255, 46, 0, 0.5);
        }

    .id-badge {
        background: rgba(255,255,255,0.1);
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 0.8rem;
        font-weight: bold;
    }
</style>

<div class="Content1" style="height: auto;">
    <div class="container-users">
        <h1 class="page-title"><i class="fas fa-users-cog"></i> Gestão de Contratos</h1>

        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th width="10%">ID</th>
                        <th width="40%">Nome do Usuário</th>
                        <th width="50%">Serviço (Cargo)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        Console.WriteLine(item.Servico);

                        <tr>
                            <td><span class="id-badge">#@item.IdUsuario</span></td>
                            <td>
                                <span style="font-size: 1.1rem; font-weight: 500;">@item.Nome</span>
                                <br>
                                <span style="font-size: 0.8rem; opacity: 0.6;">@item.Email</span>
                            </td>
                            <td>
                                <form asp-action="AtualizarServico" method="post" style="display: flex; gap: 10px; align-items: center;">
                                    <input type="hidden" name="idUsuario" value="@item.IdUsuario" />

                                    <select name="novoServico" class="role-select">
                                        <!option value="Usuario" @(item.Servico == "Usuario" ? "selected" : "")>Usuário Comum</!option>
                                        <!option value="Entregador" @(item.Servico == "Entregador" ? "selected" : "")>Entregador</!option>
                                        <!option value="Vendedor" @(item.Servico == "Vendedor" ? "selected" : "")>Vendedor</!option>
                                        <!option value="Administrador" @(item.Servico == "Administrador" ? "selected" : "")>Administrador</!option>
                                    </select>

                                    <button type="submit" class="btn-update">
                                        <i class="fas fa-save"></i> Salvar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>