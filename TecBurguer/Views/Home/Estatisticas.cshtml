@model TecBurguer.Models.EstatisticasViewModel
@{
    ViewData["Title"] = "Estatísticas Administrativas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background-color: var(--dark-bg);
        color: var(--text-main);
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    .stats-container {
        padding: 40px 5%;
        color: white;
        background-color: #1a1a1a;
        min-height: 100vh;
    }

    .stats-header {
        font-family: 'Ranchers', cursive;
        color: var(--primary);
        font-size: 3.5rem;
        text-align: center;
        margin-bottom: 40px;
        text-shadow: 2px 2px 0px #000;
    }

    /* Cards de Resumo Financeiro */
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        border-left: 5px solid var(--primary);
        padding: 20px;
        border-radius: 10px;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.1);
        }

    .stat-title {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
        margin-bottom: 10px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
        color: white;
    }

    /* Top Burguer Box */
    .top-burguer-box {
        background: linear-gradient(45deg, var(--primary-dark), #1a1a1a);
        padding: 25px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 40px;
        border: 1px solid var(--primary);
    }

    .trophy-icon {
        font-size: 3rem;
        color: gold;
        margin-right: 20px;
    }

    /* Seções de Gráficos e Tabelas */
    .section-title {
        font-family: 'Ranchers', cursive;
        color: white;
        font-size: 2rem;
        margin-top: 40px;
        margin-bottom: 20px;
        border-bottom: 2px solid var(--primary);
        display: inline-block;
    }

    .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .chart-box {
        background: rgba(0, 0, 0, 0.4);
        border-radius: 15px;
        padding: 20px;
        border: 1px solid rgba(255, 46, 0, 0.1);
    }

        .chart-box h4 {
            color: var(--primary);
            text-align: center;
            margin-bottom: 15px;
            font-weight: 500;
        }

    /* Tabelas */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .custom-table th {
            color: var(--primary);
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .custom-table tr:hover {
            background-color: rgba(255, 46, 0, 0.05);
        }

    /* Alerta de Estoque */
    .stock-alert {
        color: #ffcc00; /* Amarelo alerta */
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 5px;
        animation: pulse 2s infinite;
    }

    .stock-ok {
        color: #00ff88;
        font-size: 0.8rem;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.6;
        }

        100% {
            opacity: 1;
        }
    }
</style>

<div class="Content1" style="height: auto;">
    <div class="stats-container">
        <h1 class="stats-header">PAINEL ADMINISTRATIVO</h1>

        <div class="summary-grid">
            <div class="stat-card">
                <div class="stat-title">Hoje</div>
                <div class="stat-value">@Model.VendasHoje.ToString("C")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Esta Semana</div>
                <div class="stat-value">@Model.VendasSemana.ToString("C")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Este Mês</div>
                <div class="stat-value">@Model.VendasMes.ToString("C")</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Este Ano</div>
                <div class="stat-value">@Model.VendasAno.ToString("C")</div>
            </div>
        </div>

        <div class="top-burguer-box">
            <div style="display:flex; align-items:center;">
                <i class="fas fa-trophy trophy-icon"></i>
                <div>
                    <h3 style="margin:0; font-size: 1.8rem;"><b>HAMBÚRGUER MAIS VENDIDO:</b>  <span style="color:white; text-transform: uppercase;">@Model.TopHamburguerNome</span></h3>
                    <p style="margin:0; opacity:0.8;">@Model.TopHamburguerQtd unidades vendidas</p>
                </div>
            </div>
            <div style="text-align:right;">
                <div class="stat-title">Rendimento Total</div>
                <div class="stat-value" style="font-size:1.8rem;">@Model.TopHamburguerRendimento.ToString("C")</div>
            </div>
        </div>

        <h2 class="section-title"><i class="fas fa-chart-line"></i> Análise de Evolução</h2>
        <div class="charts-grid">
            <div class="chart-box">
                <h4><i class="far fa-calendar-alt"></i> Últimos 7 Dias</h4>
                <canvas id="dailyChart"></canvas>
            </div>
            <div class="chart-box">
                <h4><i class="fas fa-calendar-week"></i> Por Semana (Mês Atual)</h4>
                <canvas id="weeklyChart"></canvas>
            </div>
            <div class="chart-box">
                <h4><i class="fas fa-calendar"></i> Por Mês (Ano Atual)</h4>
                <canvas id="monthlyChart"></canvas>
            </div>
        </div>

        <div class="charts-grid">

            <div class="chart-box">
                <h4><i class="fas fa-tags"></i> Performance por Categoria</h4>
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Categoria</th>
                            <th>Total</th>
                            <th>Ticket Médio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cat in Model.EstatisticasPorCategoria)
                        {
                            <tr>
                                <td>@cat.NomeCategoria</td>
                                <td>@cat.TotalVendas.ToString("C")</td>
                                <td>@cat.MediaVendas.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="chart-box" style="border-color: #ffcc00;">
                <h4 style="color: #ffcc00;"><i class="fas fa-boxes"></i> Controle de Estoque (Semanal)</h4>
                <p style="font-size: 0.8rem; opacity: 0.7; margin-bottom: 10px;">
                    Consumo calculado com base nas vendas dos últimos 7 dias.
                </p>
                <div style="max-height: 300px; overflow-y: auto;">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>Ingrediente</th>
                                <th>Gasto (Un)</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ing in Model.RelatorioIngredientes)
                            {
                                <tr>
                                    <td>@ing.NomeIngrediente</td>
                                    <td style="font-weight:bold; font-size:1.1rem;">@ing.GastoSemana</td>
                                    <td>
                                        @if (ing.AlertaReposicao)
                                        {
                                            <span class="stock-alert">
                                                <i class="fas fa-exclamation-triangle"></i> Repor!
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="stock-ok"><i class="fas fa-check-circle"></i> OK</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    // Configurações Globais ChartJS
    Chart.defaults.color = '#e0e0e0';
    Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.05)';
    const primaryColor = '#FF2E00';
    const primaryTransparent = 'rgba(255, 46, 0, 0.3)';

    // 1. Gráfico Diário (Line)
    new Chart(document.getElementById('dailyChart'), {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.GraficoDiario.Select(x => x.Label))),
            datasets: [{
                label: 'Vendas (R$)',
                data: @Html.Raw(Json.Serialize(Model.GraficoDiario.Select(x => x.Total))),
                borderColor: primaryColor,
                backgroundColor: primaryTransparent,
                fill: true,
                tension: 0.4
            }]
        },
        options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
    });

    // 2. Gráfico Semanal (Bar)
    new Chart(document.getElementById('weeklyChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.GraficoSemanal.Select(x => x.Label))),
            datasets: [{
                label: 'Vendas (R$)',
                data: @Html.Raw(Json.Serialize(Model.GraficoSemanal.Select(x => x.Total))),
                backgroundColor: primaryColor,
                borderRadius: 5
            }]
        },
        options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
    });

    // 3. Gráfico Mensal (Line Area)
    new Chart(document.getElementById('monthlyChart'), {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.GraficoMensal.Select(x => x.Label))),
            datasets: [{
                label: 'Faturamento (R$)',
                data: @Html.Raw(Json.Serialize(Model.GraficoMensal.Select(x => x.Total))),
                borderColor: '#00ccff', /* Azul Neon para diferenciar anual */
                backgroundColor: 'rgba(0, 204, 255, 0.2)',
                fill: true,
                tension: 0.3,
                borderWidth: 2
            }]
        },
        options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
    });
</script>