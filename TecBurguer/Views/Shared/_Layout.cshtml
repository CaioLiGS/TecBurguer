@using Microsoft.AspNetCore.Identity
@using TecBurguer.Areas.Identity.Data

@inject SignInManager<LoginCliente> SignInManager
@inject UserManager<LoginCliente> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TecBurguer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TecBurguer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fascinate&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav id=BarraDeNavegacao class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo-wrapper">
                        <img src="~/css/Imagens/TextLogo.png" class="logo-text" alt="TecBurger">
                        <img src="~/css/Imagens/BurguerLogo.png" class="logo-icon" alt="TecBurger">
                    </div>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav-flex-grow-1">
                        <div class="Abas">
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cardapio">Cardapio</a>
                            </li>

                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Entregadores">Entregador</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        ⚙️ Administração
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Hamburgueres" asp-action="Index">Hambúrgueres</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="HamburguerIgredientes" asp-action="Index">Hambúrguer Ingredientes</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Ingredientes" asp-action="Index">Ingredientes</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Vendedor"))
                            {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white" asp-area="" asp-controller="Home" asp-action="PedidoVendedor">Pedidos</a>
                            </li>
                            }
                        </div>

                        <div class="ContentRight">
                            <div class="Cart">
                                <a style="cursor: pointer;"><img src="~/css/Imagens/IconCart.png"></a>
                                <p class="QuantCart"></p>
                            </div>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="LoginPartial2">
                                    <partial name="_LoginPartial" />
                                </li>
                            }
                            else
                            {
                                <li class="LoginPartial">
                                    <partial name="_LoginPartial" />
                                </li>
                            }

                        </div>
                       
   
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()   
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
