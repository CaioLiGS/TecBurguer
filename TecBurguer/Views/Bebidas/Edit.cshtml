@model TecBurguer.Models.Bebidas

@{
    ViewData["Title"] = "Editar Bebida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* --- Estilos (Mesmos da Criação) --- */
    :root {
        --primary: #FF2E00;
        --primary-glow: rgba(255, 46, 0, 0.5);
        --accent: #FFC107;
        --dark-bg: #121212;
        --card-bg: rgba(30, 30, 30, 0.7);
        --border-glass: rgba(255, 255, 255, 0.1);
        --text-main: #f5f5f5;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-main);
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    .create-page-container {
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        position: relative;
        overflow: hidden;
    }

    /* Orbs de Fundo */
    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        z-index: 0;
        opacity: 0.2;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: var(--primary);
        top: -50px;
        left: -50px;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: var(--accent);
        bottom: -50px;
        right: -50px;
    }

    /* Painel de Vidro */
    .glass-panel {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-top: 1px solid rgba(255, 46, 0, 0.3);
        border-radius: 30px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        display: flex;
        flex-wrap: wrap;
        max-width: 1000px;
        width: 100%;
        overflow: hidden;
        z-index: 1;
        animation: fadeInUp 0.8s ease-out;
    }

    /* Lado Esquerdo (Imagem) */
    .image-section {
        flex: 1;
        min-width: 300px;
        background: radial-gradient(circle at center, rgba(255, 70, 0, 0.1), transparent 70%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px;
        border-right: 1px solid var(--border-glass);
    }

    .image-preview-box {
        width: 100%;
        max-width: 300px;
        height: 300px;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px dashed var(--primary);
        background: rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .image-preview-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .image-controls {
        margin-top: 20px;
        width: 100%;
        max-width: 350px;
        display: flex;
        gap: 10px;
    }

    .link-input {
        flex-grow: 1;
        background: rgba(0,0,0,0.3);
        border: 1px solid #444;
        color: white;
        border-radius: 10px;
        padding: 10px 15px;
        transition: 0.3s;
    }

        .link-input:focus {
            border-color: var(--primary);
            outline: none;
        }

    .upload-btn {
        width: 46px;
        height: 46px;
        background: var(--primary);
        color: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: 0.3s;
        font-size: 1.2rem;
    }

        .upload-btn:hover {
            background: white;
            color: var(--primary);
            box-shadow: 0 0 15px var(--primary);
        }

    /* Lado Direito (Formulário) */
    .form-section {
        flex: 1.5;
        min-width: 350px;
        padding: 40px;
    }

    .form-title {
        font-family: 'Ranchers', cursive;
        font-size: 3rem;
        color: var(--primary);
        text-shadow: 2px 2px 0 #000;
        margin-bottom: 30px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
        color: var(--accent);
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .form-control {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid #444;
        color: white;
        border-radius: 12px;
        padding: 15px;
        font-size: 1rem;
        transition: 0.3s;
    }

        .form-control:focus {
            background: rgba(0, 0, 0, 0.5);
            border-color: var(--primary);
            box-shadow: 0 0 15px var(--primary-glow);
            outline: none;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-submit {
        flex: 2;
        background: linear-gradient(45deg, var(--primary), #ff5e00);
        color: white;
        border: none;
        padding: 15px;
        border-radius: 50px;
        font-weight: bold;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(255, 46, 0, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 46, 0, 0.6);
        }

    .btn-cancel {
        flex: 1;
        background: transparent;
        border: 2px solid #444;
        color: #aaa;
        border-radius: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            border-color: white;
            color: white;
            background: rgba(255,255,255,0.05);
        }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(50px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 900px) {
        .glass-panel

    {
        flex-direction: column;
    }

    .image-section {
        border-right: none;
        border-bottom: 1px solid var(--border-glass);
        padding: 30px;
    }

    }
</style>

<div class="create-page-container">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-panel">

        <div class="image-section">
            <div class="image-preview-box">
                <img src="@(string.IsNullOrEmpty(Model.Imagem) ? "/css/Imagens/BurguerLogo.png" : Model.Imagem)"
                     id="ImagemDoLink"
                     onerror="this.src='/css/Imagens/BurguerLogo.png'" alt="Preview">
            </div>

            <div class="image-controls">
                <input type="text" id="LinkDaImagem" class="link-input" placeholder="Cole o link da imagem..." />

                <label for="fileInput" class="upload-btn UploadLabel" title="Carregar do Computador">
                    <i class="fa-solid fa-folder-open"></i>
                </label>
                <input type="file" id="fileInput" accept="image/*" style="display:none;">
            </div>
            <small style="color: #777; margin-top: 10px;">Cole um link ou envie um arquivo.</small>
        </div>

        <div class="form-section">
            <h1 class="form-title">EDITAR BEBIDA</h1>

            <form asp-action="Edit" id="createForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="IdBebidas" />
                <input asp-for="Imagem" type="hidden" id="HiddenImagemUrl" />

                <div class="form-group">
                    <label asp-for="Nome" class="form-label">Nome da Bebida</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Coca-Cola Lata" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Preco" class="form-label">Preço (R$)</label>
                        <input asp-for="Preco" class="form-control" placeholder="0.00" type="number" step="0.01" />
                        <span asp-validation-for="Preco" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 form-group">
                        <label asp-for="Quantidade" class="form-label">Estoque Atual</label>
                        <input asp-for="Quantidade" class="form-control" placeholder="0" type="number" />
                        <span asp-validation-for="Quantidade" class="text-danger small"></span>
                    </div>
                </div>

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-cancel">CANCELAR</a>
                    <input type="submit" value="SALVAR" class="btn-submit" id="BotaoSubmit" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://unpkg.com/@@supabase/supabase-js@2"></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // --- CONFIGURAÇÃO SUPABASE ---
            const SUPABASE_URL = "https://qspldknkkndxhlvsrbbl.supabase.co";
            const SUPABASE_ANON_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InFzcGxka25ra25keGhsdnNyYmJsIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTU4NzEyMTAsImV4cCI6MjA3MTQ0NzIxMH0.MSQyhPRtNzetoM08Zgbq5-UQiQKUiAp3Uo_1qR5i6l4";
            const STORAGE_BUCKET = "bebidas"; // Ou bucket de bebidas

            const supabaseClient = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

            const fileInput = document.getElementById('fileInput');
            const linkInput = document.getElementById('LinkDaImagem');
            const imgPreview = document.getElementById('ImagemDoLink');
            const hiddenInput = document.getElementById('HiddenImagemUrl');
            const uploadLabel = document.querySelector('.UploadLabel');
            const submitBtn = document.getElementById("BotaoSubmit");
            const form = document.getElementById("createForm");

            let selectedFile = null;

            // --- LÓGICA DE EDIÇÃO: Carregar dados existentes ---
            const initialImageURL = '@Html.Raw(Model.Imagem)';

            if (initialImageURL && initialImageURL.trim() !== "") {
                imgPreview.src = initialImageURL;
                hiddenInput.value = initialImageURL;
                linkInput.value = initialImageURL;
            }

            // --- EVENTOS (Mesma lógica do Create) ---

            linkInput.addEventListener('input', () => {
                const url = linkInput.value.trim();
                if (url.length > 5) {
                    imgPreview.src = url;
                    hiddenInput.value = url;
                    selectedFile = null;
                    uploadLabel.innerHTML = '<i class="fa-solid fa-folder-open"></i>';
                    uploadLabel.style.background = "var(--primary)";
                }
            });

            fileInput.addEventListener('change', e => {
                const file = e.target.files[0];
                if (file) {
                    selectedFile = file;
                    imgPreview.src = URL.createObjectURL(file);

                    linkInput.value = "Arquivo selecionado: " + file.name;
                    linkInput.disabled = true;

                    uploadLabel.innerHTML = '<i class="fa-solid fa-xmark"></i>';
                    uploadLabel.title = "Remover arquivo";
                    uploadLabel.style.background = "#dc3545";
                }
            });

            uploadLabel.addEventListener('click', e => {
                if (selectedFile || (hiddenInput.value && hiddenInput.value !== "")) {
                    e.preventDefault();
                    selectedFile = null;
                    fileInput.value = "";
                    linkInput.disabled = false;
                    linkInput.value = "";
                    imgPreview.src = "/css/Imagens/BurguerLogo.png";
                    hiddenInput.value = "";

                    uploadLabel.innerHTML = '<i class="fa-solid fa-folder-open"></i>';
                    uploadLabel.style.background = "var(--primary)";
                }
            });

            submitBtn.addEventListener('click', async e => {
                e.preventDefault();

                if (selectedFile && typeof selectedFile === 'object') {
                    const originalText = submitBtn.value;
                    submitBtn.value = "ENVIANDO IMAGEM...";
                    submitBtn.disabled = true;

                    try {
                        const fileName = `bebida_${Date.now()}_${selectedFile.name.replace(/\s/g, '_')}`;

                        const { data, error } = await supabaseClient.storage
                            .from(STORAGE_BUCKET)
                            .upload(fileName, selectedFile);

                        if (error) throw error;

                        const { data: publicData } = supabaseClient.storage
                            .from(STORAGE_BUCKET)
                            .getPublicUrl(fileName);

                        hiddenInput.value = publicData.publicUrl;
                        form.submit();

                    } catch (error) {
                        alert("Erro no upload: " + error.message);
                        submitBtn.value = originalText;
                        submitBtn.disabled = false;
                    }
                } else {
                    if (!hiddenInput.value && linkInput.value && !linkInput.disabled) {
                        hiddenInput.value = linkInput.value;
                    }
                    form.submit();
                }
            });
        });
    </script>
}