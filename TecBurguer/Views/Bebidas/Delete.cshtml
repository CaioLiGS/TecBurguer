@model TecBurguer.Models.Bebidas

@{
    ViewData["Title"] = "Excluir Bebida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --danger: #FF003C; /* Vermelho Neon */
        --danger-dark: #8B0000;
        --text-main: #f5f5f5;
        --dark-bg: #121212;
        --card-bg: rgba(30, 30, 30, 0.7);
        --border-glass: rgba(255, 0, 60, 0.3);
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-main);
        font-family: 'Poppins', sans-serif;
        margin-top: 10vh;
    }

    /* Container Central */
    .delete-container {
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    /* Orbs de Fundo (Vermelhos) */
    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        z-index: 0;
        opacity: 0.25;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: var(--danger);
        top: -50px;
        left: -50px;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: var(--danger-dark);
        bottom: -50px;
        right: -50px;
    }

    /* Painel de Vidro */
    .glass-panel {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 2px solid var(--border-glass);
        border-radius: 30px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.6);
        display: flex;
        flex-wrap: wrap;
        max-width: 900px;
        width: 100%;
        overflow: hidden;
        z-index: 1;
        animation: shakeIn 0.6s ease-out;
    }

    /* Lado Esquerdo (Imagem) */
    .image-section {
        flex: 1;
        min-width: 300px;
        background: radial-gradient(circle at center, rgba(255, 0, 60, 0.15), transparent 70%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        border-right: 1px solid var(--border-glass);
    }

    .product-img {
        width: 100%;
        max-width: 250px; /* Um pouco menor que hamburguer pois latas são verticais */
        height: auto;
        border-radius: 20px;
        filter: grayscale(0.8) contrast(1.2);
        box-shadow: 0 0 30px rgba(0,0,0,0.5);
        transition: all 0.5s ease;
        border: 2px solid transparent;
    }

    .glass-panel:hover .product-img {
        filter: grayscale(0);
        transform: scale(1.05) rotate(3deg);
        border-color: var(--danger);
        box-shadow: 0 0 30px var(--danger);
    }

    /* Lado Direito (Info) */
    .info-section {
        flex: 1.5;
        min-width: 350px;
        padding: 50px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .warning-title {
        font-family: 'Ranchers', cursive;
        color: var(--danger);
        font-size: 2.8rem;
        margin-bottom: 10px;
        text-shadow: 0 0 10px rgba(255, 0, 60, 0.6);
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .warning-text {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 30px;
    }

    /* Detalhes do Item */
    .item-details {
        background: rgba(0,0,0,0.3);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 4px solid var(--danger);
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 5px;
    }

        .detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

    .detail-label {
        font-weight: bold;
        color: #888;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .detail-value {
        font-weight: bold;
        color: white;
        font-size: 1rem;
    }

    /* Botões */
    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn-delete {
        flex: 2;
        background: linear-gradient(45deg, var(--danger), #ff4d4d);
        color: white;
        border: none;
        padding: 15px;
        border-radius: 50px;
        font-weight: bold;
        font-size: 1.1rem;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 5px 20px rgba(255, 0, 60, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-delete:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 40px rgba(255, 0, 60, 0.7);
            background: var(--danger);
        }

    .btn-cancel {
        flex: 1;
        background: transparent;
        border: 2px solid #555;
        color: #aaa;
        border-radius: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            border-color: white;
            color: white;
            background: rgba(255,255,255,0.05);
        }

    @@keyframes shakeIn {
        0%
        {
            opacity: 0;
            transform: scale(0.9);
        }

        70% {
            transform: scale(1.02);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }

    }

    @@media (max-width: 900px) {
        .glass-panel
        {
            flex-direction: column;
        }

        .image-section {
            border-right: none;
            border-bottom: 1px solid var(--border-glass);
            padding: 30px;
        }

        .info-section {
            padding: 30px;
        }

    }
</style>

<div class="delete-container">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-panel">

        <div class="image-section">
            <img src="@(string.IsNullOrEmpty(Model.Imagem) ? "/css/Imagens/BurguerLogo.png" : Model.Imagem)"
                 class="product-img"
                 onerror="this.src='/css/Imagens/BurguerLogo.png'"
                 alt="@Model.Nome">
        </div>

        <div class="info-section">
            <h1 class="warning-title"><i class="fas fa-trash-alt"></i> EXCLUIR?</h1>
            <p class="warning-text">
                Tem certeza que deseja remover esta bebida do estoque? <br>
                <strong>Essa ação não pode ser desfeita.</strong>
            </p>

            <div class="item-details">
                <div class="detail-row">
                    <span class="detail-label">Nome</span>
                    <span class="detail-value">@Model.Nome</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Preço</span>
                    <span class="detail-value">R$ @(Model.Preco?.ToString("N2") ?? "0,00")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Estoque Atual</span>
                    <span class="detail-value">@((int)(Model.Quantidade ?? 0)) un.</span>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdBebidas" />

                <div class="action-buttons">
                    <a asp-action="Index" class="btn-cancel">CANCELAR</a>
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-times-circle"></i> CONFIRMAR
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>