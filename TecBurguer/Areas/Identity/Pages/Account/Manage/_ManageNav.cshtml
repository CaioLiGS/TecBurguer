@inject SignInManager<LoginCliente> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<link href="~/css/Perfil.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Ranchers&family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="d-flex flex-column">
    <div class="text-center mb-4 d-none d-md-block">
        <img src="/css/Imagens/BurguerLogo.png" style="width: 80px; filter: drop-shadow(0 0 10px var(--primary));" alt="Avatar">
        <p class="mt-2 text-muted small">Bem-vindo de volta!</p>
    </div>

    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <i class="fas fa-id-card"></i> Perfil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.LocationNavClass(ViewContext)" id="location" asp-page="./Location">
                <i class="fas fa-map-marker-alt"></i> Endereço
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                <i class="fas fa-envelope"></i> Email
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <i class="fas fa-lock"></i> Segurança
            </a>
        </li>
        @if (hasExternalLogins)
        {
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-login" asp-page="./ExternalLogins">
                    <i class="fab fa-google"></i> Conexões
                </a>
            </li>
        }
    </ul>
</div>