@page
@model EmailModel
@{
    ViewData["Title"] = "Gerenciar Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3><i class="fas fa-envelope-open-text"></i> @ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email Atual -->
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group mb-3">
                    <input asp-for="Email" class="form-control" disabled style="border-right: none;" />
                    <span class="input-group-text" style="background-color: var(--dark-card); border: 1px solid #333; border-left: none;">
                        <i class="fas fa-check-circle text-success"></i>
                    </span>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" disabled />
                    <label asp-for="Email" class="form-label"></label>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link text-warning" style="text-decoration: none;">
                        Reenviar email de verificação
                    </button>
                </div>
            }

            <!-- Novo Email -->
            <div class="form-floating mb-4">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Novo email" />
                <label asp-for="Input.NewEmail" class="form-label">Novo email</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">
                ALTERAR EMAIL
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}